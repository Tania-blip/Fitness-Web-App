    @*     <div> *@
    @*         <InputText @bind-Value="Workout.User.FirstName" class="form-control col-sm-3" /> *@
    @*         <ValidationMessage For="@(() => Workout.User.FirstName)" /> *@
    @*     </div> *@
    @* </div> *@

    <button type="submit">Submit</button>
</EditForm>