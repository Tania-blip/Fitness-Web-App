@page "/addExercise"
@inject NavigationManager Navigation

<h3>AddExercisePage</h3>

<EditForm
    Model="@Exercise" 
    OnValidSubmit="@SaveExercise" FormName="AddexerciseForm">
    <div class="form-group">
        <label>Description :</label>
        <div>
            <InputText @bind-Value="Exercise.Description" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => Exercise.Description)" />
        </div>
    </div>
    <div class="form-group">
        <label>Type :</label>
        <div>
            <InputText @bind-Value="Exercise.Type" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => Exercise.Type)" />
        </div>
    </div>

    <button type="submit">Submit</button>
</EditForm>